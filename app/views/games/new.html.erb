<h1>New Games</h1>

<% @grid.each do |i| %>
<p><%= i %></p>
<% end %>

<form action="/score" method = "post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name = "answer" placeholder="Type in your guess!">
  <%= hidden_field_tag :grid, @grid %>
  <input type="submit">
</form>
